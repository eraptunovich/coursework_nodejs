<%- include ("../_layouts/adminheader") %>
<h2 class="page-title">Товары</h2>
<a href="/admin/products/add-product" class="btn btn-primary">Добавить новый товар</a>
<br><br>

<% if (count > 0) { %>


<table class="table table-striped table-hover">
	<thead>
		<tr class="home">
			<th>Товар</th>
			<th>Цена</th>
			<th>Категория</th>
			<th>Фото товара</th>
			<th>Редактировать информацию о товаре</th>
			<th>Удаоить товар</th>
		</tr>
	</thead>
	<tbody>
		<% products.forEach(function(product){%>
			<tr>
				<td><%= product.title %></td>
				<td><%= parseFloat(product.price).toFixed(2) %></td>
				<td><%= product.category %></td>
				<td>
					<% if (product.image == "") { %>
						<img id="noimages" src="/images/noimage.png">
					<% } else { %>
						<img id="noimages" src="/product_images/<%= product._id %>/<%= product.image %>">
					<% } %>
				</td>
				<td><a href="/admin/products/edit-product/<%= product._id %>">Редактировать товар</a></td>
				<td><a class="confirmDeletion" href="/admin/products/delete-product/<%= product._id %>">Удалить товар</a></td>
			<% }); %>
			</tr>
	</tbody>
</table>
<% } else { %>
	<h3 class="text-center">В магазине пока нет товаров...</h3>
<% } %>


<%- include ("../_layouts/adminfooter") %>
